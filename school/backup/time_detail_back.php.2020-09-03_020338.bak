       col_recess_after_lecture_count_5,
       col_total_lecture_count
    )VALUES(?,?,?,?,?,?,?,?,?,?,?,?,?,?,?,?,?,?,?,?)");
  
    $sql_statement1->bind_param("siiiiiiiiiiiiiiiiiii",
    $teacher_name,                            
    $first_lecture_count,
    $first_lecture_count,
    $first_lecture_count,
    $first_lecture_count,
    $first_lecture_count,
    $first_lecture_count,
	$day_wise_id_before,
